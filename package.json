{
  "name": "webring",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:e2e": "playwright test",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "biome check src",
    "format": "biome format --write src",
    "prepare": "test -n \"$CI\" || husky || true"
  },
  "dependencies": {
    "@atproto/api": "^0.18.8",
    "@atproto/lex": "^0.0.6",
    "@atproto/lex-cli": "^0.9.8",
    "@atproto/lexicon": "^0.6.0",
    "@atproto/oauth-client-node": "^0.3.13",
    "@hono/node-server": "^1.19.7",
    "@hono/zod-validator": "^0.7.6",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "hono": "^4.11.1",
    "jose": "^6.1.3",
    "node-cron": "^4.2.1",
    "rss-parser": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@cloudflare/workers-types": "^4.20251224.0",
    "@hono/vite-dev-server": "^0.23.0",
    "@playwright/test": "^1.57.0",
    "@types/bun": "^1.3.5",
    "@types/node": "^24.0.0",
    "@types/node-cron": "^3.0.11",
    "esbuild": "^0.27.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vite": "^7.3.0",
    "vite-node": "^2.1.2",
    "vitest": "^2.1.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
