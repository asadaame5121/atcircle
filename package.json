{
    "name": "webring",
    "type": "module",
    "engines": {
        "node": ">=24"
    },
    "scripts": {
        "dev": "vite",
        "build": "npm run build:css && vite build",
        "build:css": "tailwindcss -i src/index.css -o assets/index.css",
        "start": "node dist/index.js",
        "test": "vitest",
        "test:e2e": "playwright test",
        "lint": "biome check src",
        "format": "biome check --write --unsafe src",
        "prepare": "test -n \"$CI\" || husky || true"
    },
    "dependencies": {
        "@atproto/api": "^0.18.8",
        "@atproto/lex": "^0.0.6",
        "@atproto/lex-cli": "^0.9.8",
        "@atproto/lexicon": "^0.6.0",
        "@atproto/oauth-client-node": "^0.3.13",
        "@hono/node-server": "^1.19.7",
        "@hono/zod-validator": "^0.7.6",
        "cheerio": "^1.1.2",
        "dotenv": "^17.2.3",
        "hono": "^4.11.1",
        "jose": "^6.1.3",
        "multiformats": "9.9.0",
        "node-cron": "^4.2.1",
        "pino": "^10.1.0",
        "rss-parser": "^3.13.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.10",
        "@hono/vite-dev-server": "^0.23.0",
        "@playwright/test": "^1.57.0",
        "@tailwindcss/cli": "^4.1.18",
        "@tailwindcss/vite": "^4.1.18",
        "@types/bun": "^1.3.5",
        "@types/node": "^24.0.0",
        "@types/node-cron": "^3.0.11",
        "esbuild": "^0.27.2",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "pino-pretty": "^13.1.3",
        "tailwindcss": "^4.1.18",
        "tsx": "^4.21.0",
        "typescript": "^5.7.2",
        "vite": "^7.3.0",
        "vite-node": "^2.1.2",
        "vitest": "^2.1.2"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx,js,jsx}": [
            "biome check --write --no-errors-on-unmatched"
        ]
    }
}
