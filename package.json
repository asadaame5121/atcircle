{
  "name": "webring",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --banner:js=\"import { createRequire } from 'module'; import { fileURLToPath } from 'url'; import { dirname } from 'path'; const require = createRequire(import.meta.url); const __filename = fileURLToPath(import.meta.url); const __dirname = dirname(__filename);\"",
    "start": "node dist/index.js",
    "test": "vitest",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@atproto/api": "^0.18.8",
    "@atproto/lex": "^0.0.6",
    "@atproto/lex-cli": "^0.9.8",
    "@atproto/lexicon": "^0.6.0",
    "@atproto/oauth-client-node": "^0.3.13",
    "@hono/node-server": "^1.19.7",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "hono": "^4.11.1",
    "jose": "^6.1.3",
    "node-cron": "^4.2.1",
    "rss-parser": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251224.0",
    "@types/bun": "^1.3.5",
    "@types/node": "^24.0.0",
    "@types/node-cron": "^3.0.11",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vite-node": "^2.1.2",
    "vitest": "^2.1.2"
  }
}
