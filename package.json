{
  "name": "webring",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "d1:verify": "wrangler d1 execute webring-db --remote --command \"SELECT 1\"",
    "d1:migrate:oauth": "wrangler d1 execute webring-db --remote --command \"CREATE TABLE IF NOT EXISTS oauth_states (key TEXT PRIMARY KEY, state TEXT NOT NULL, created_at INTEGER DEFAULT (strftime('%s', 'now')));\""
  },
  "dependencies": {
    "@atproto/api": "^0.18.8",
    "@atproto/oauth-client-node": "^0.3.13",
    "hono": "^4.11.1",
    "jose": "^6.1.3",
    "rss-parser": "^3.13.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251224.0",
    "@types/bun": "^1.3.5",
    "wrangler": "^4.4.0"
  }
}