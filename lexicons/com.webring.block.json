{
  "lexicon": 1,
  "id": "com.webring.block",
  "defs": {
    "main": {
      "type": "record",
      "description": "Block/Kick a member from the Webring",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["subject", "ring", "createdAt"],
        "properties": {
          "subject": { "type": "string", "format": "did", "description": "DID of the member to block" },
          "ring": { "type": "ref", "ref": "com.webring.defs#ringRef" },
          "reason": { "type": "string", "maxLength": 1000, "maxGraphemes": 100, "description": "Reason for blocking" },
          "createdAt": { "type": "string", "format": "datetime" }
        }
      }
    }
  }
}
