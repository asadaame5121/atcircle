{
    "lexicon": 1,
    "id": "net.asadaame5121.at-circle.request",
    "defs": {
        "main": {
            "type": "record",
            "description": "A request to join a webring",
            "key": "tid",
            "record": {
                "type": "object",
                "required": ["ring", "siteUrl", "siteTitle", "createdAt"],
                "properties": {
                    "ring": {
                        "type": "ref",
                        "ref": "net.asadaame5121.at-circle.defs#ringRef"
                    },
                    "siteUrl": {
                        "type": "string",
                        "format": "uri",
                        "description": "URL of the site to register"
                    },
                    "siteTitle": {
                        "type": "string",
                        "maxLength": 1000,
                        "maxGraphemes": 100,
                        "description": "Title of the site"
                    },
                    "rssUrl": {
                        "type": "string",
                        "format": "uri",
                        "description": "RSS feed URL of the site"
                    },
                    "message": {
                        "type": "string",
                        "maxLength": 1000,
                        "maxGraphemes": 100,
                        "description": "Introduction message"
                    },
                    "createdAt": { "type": "string", "format": "datetime" }
                }
            }
        }
    }
}
