{
  "id": "app.bsky.graph.getFollowers",
  "defs": {
    "main": {
      "type": "query",
      "output": {
        "schema": {
          "type": "object",
          "required": [
            "subject",
            "followers"
          ],
          "properties": {
            "cursor": {
              "type": "string"
            },
            "subject": {
              "ref": "app.bsky.actor.defs#profileView",
              "type": "ref"
            },
            "followers": {
              "type": "array",
              "items": {
                "ref": "app.bsky.actor.defs#profileView",
                "type": "ref"
              }
            }
          }
        },
        "encoding": "application/json"
      },
      "parameters": {
        "type": "params",
        "required": [
          "actor"
        ],
        "properties": {
          "actor": {
            "type": "string",
            "format": "at-identifier"
          },
          "limit": {
            "type": "integer",
            "default": 50,
            "maximum": 100,
            "minimum": 1
          },
          "cursor": {
            "type": "string"
          }
        }
      },
      "description": "Enumerates accounts which follow a specified account (actor)."
    }
  },
  "$type": "com.atproto.lexicon.schema",
  "lexicon": 1
}