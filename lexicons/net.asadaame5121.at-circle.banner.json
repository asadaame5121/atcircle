{
    "lexicon": 1,
    "id": "net.asadaame5121.at-circle.banner",
    "defs": {
        "main": {
            "type": "record",
            "description": "A banner image for a ring",
            "key": "tid",
            "record": {
                "type": "object",
                "required": ["ring", "banner", "createdAt"],
                "properties": {
                    "ring": {
                        "type": "ref",
                        "ref": "net.asadaame5121.at-circle.defs#ringRef"
                    },
                    "banner": {
                        "type": "blob",
                        "accept": ["image/*"],
                        "maxSize": 1000000
                    },
                    "createdAt": { "type": "string", "format": "datetime" }
                }
            }
        }
    }
}
